<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>{% block title %}Fundacja dla zwierząt{% endblock %}</title>

    {% block stylesheets %}
       <link rel="stylesheet" href="http://mjaw.ayz.pl/css/styles.css">
 <link rel="stylesheet" href="http://mjaw.ayz.pl/vendor/bootstrap/css/bootstrap.css">
      		<link rel="stylesheet" href="http://mjaw.ayz.pl/css/AddPetStyle.css">
        <link rel="stylesheet" href="http://mjaw.ayz.pl/vendor/fontawesome/css/font-awesome.min.css">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Fundacja</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul id="menu" class="nav navbar-nav">
                <li class="nav-link"><a href="{{ path('stronaGlowna') }}">Strona Główna</a></li>
                <li class="nav-link"><a href="{{ path('wyswietl_zwierzaki') }}">Do adopcji</a></li>
                <li class="nav-link"><a href="{{ path('wyswietl_zaadoptowane') }}">Zaadoptowane</a></li>
                <li class="nav-link"><a href="{{ path('wyswietl_zmarle') }}">Tęczowy most</a></li>
            </ul>
            <form class="navbar-form navbar-left">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Szukaj zwierzaka">
                </div>
                <button type="submit" class="btn btn-default">Szukaj</button>
            </form>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Konto<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        {% if is_granted('ROLE_USER') %}
                            <li><a class="navbar-link" href="{{ path('account') }}">Moje konto</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="{{ path('wyloguj') }}">Wyloguj</a></li>
                        {% else %}
                            <li><a class="navbar-link" href="{{ path('logowanie') }}">Logowanie</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="{{ path('rejestracja2') }}">Rejestracja</a></li>
                        {% endif %}

                    </ul>
                </li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
<div class="row">
    <div class="col-md-3 border_pets">

        <img src="http://mjaw.ayz.pl/images/Pies.png"/>

    </div>
    <div class="col-md-6">
        {% block body %}{% endblock %}
    </div>
    <div class="col-md-3 border_pets">

        <img src="http://mjaw.ayz.pl/images/Kotek.png" width="280" height="206"/>

    </div>
</div>
{% block javascripts %}
    <script
            src="https://code.jquery.com/jquery-2.2.4.min.js"
            integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44="
            crossorigin="anonymous"></script>
    <script src="http://mjaw.ayz.pl/vendor/bootstrap/js/bootstrap.js"></script>
{% endblock %}
</body>
</html>
